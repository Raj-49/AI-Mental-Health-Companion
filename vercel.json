{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**", "backend/prisma/**", "backend/package.json"]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    
    { "src": "/api/(.*)", "dest": "backend/src/server.js" },
    
    
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
